@model Zaidi_Corporation.Models.CrudModel
@{
    Layout = null;
}
@using (Html.BeginForm("Edit1", "Crud", FormMethod.Post))
{
    <div class="modal-dialog" role="document" style="max-width:60%">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="col-12 modal-title text-center" style="color: red">
                    Edit Details
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </h3>
            </div>

            <div class="modal-body">
                <div class="col-lg-12 col-md-12 col-sm-12 datatableOuter">
                    <div class="row">
                        <label class="col-2">
                            Batch Name :
                        </label>
                        @Html.TextBoxFor(m => m.Batch_Name, new { @class = "Col-3 text-primary form-control" })
                    </div>
                    <div class="row">
                        <label class="col-2">
                            Location
                        </label>
                        @Html.TextBoxFor(m => m.Batch_Location, new { @class = "Col-2 text-primary form-control" })
                    </div>
                    <div class="row">
                        <label class="col-2">
                            Start Date
                        </label>
                        @Html.TextBoxFor(m => m.Start_Date, new { @class = "Col-3 text-primary form-control" })
                    </div>
                    <div class="row">
                        <label class="col-2">
                            End Date
                        </label>
                        @Html.TextBoxFor(m => m.End_Date, new { @class = "Col-3 text-primary form-control" })
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                <button type="Submit" class="btn btn-primary">Save changes</button>
            </div>
        </div>

    </div>
}

